<!-- fragment_home.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/startStopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Hold to start shift "
        android:textSize="25sp" />

    <ImageButton
        android:layout_centerHorizontal="true"
        android:id="@+id/imageButton"
        android:layout_width="301dp"
        android:layout_height="286dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/fingerprint2"
        tools:srcCompat="@drawable/fingerprint2" />

    <TextView
        android:id="@+id/timeInShift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text=""
        android:textSize="25sp" />

    <Button
        android:id="@+id/addShiftButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Add Shift Manually"
        />

</LinearLayout>
